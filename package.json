{
  "name": "vs-ex-udcweb",
  "displayName": "UDCweb",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.94.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.copyCodeAsImage"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "FTP Client Settings",
      "properties": {
        "ftpClient.host": {
          "type": "string",
          "default": "192.168.63.174",
          "description": "The FTP server host."
        },
        "ftpClient.user": {
          "type": "string",
          "default": "udc",
          "description": "The FTP server username."
        },
        "ftpClient.password": {
          "type": "string",
          "default": "jishubu@4399.com",
          "description": "The FTP server password."
        },
        "ftpClient.secure": {
          "type": "boolean",
          "default": false,
          "description": "Use secure FTP."
        },
        "ftpClient.path": {
          "type": "string",
          "default": "/",
          "description": "The FTP server path."
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "udc-web",
          "title": "UDC WEB",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "udc-web": [
        {
          "id": "ftp-explorer",
          "name": "ftp-explorer",
          "contextualTitle": "UDC WEB"
        }
      ]
    },
    "commands": [
      {
        "command": "extension.copyCodeAsImage",
        "title": "Copy Code as Image"
      },
      {
        "command": "ftpExplorer.refresh",
        "title": "Refresh FTP Directory",
        "category": "FTP Explorer",
        "icon": "$(refresh)"
      },
      {
        "command": "ftpExplorer.downloadToDirectory",
        "title": "Download FTP Item",
        "category": "FTP Explorer"
      },
      {
        "command": "ftpExplorer.setRootDirectory",
        "title": "Set Current Path as Root Directory",
        "category": "FTP Explorer"
      },
      {
        "command": "ftpExplorer.backParentDirectory",
        "title": "Back Parent Directory",
        "category": "FTP Explorer"
      },
      {
        "command": "ftpExplorer.deleteItem",
        "title": "Delete FTP Item",
        "category": "FTP Explorer"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorTextFocus",
          "command": "extension.copyCodeAsImage",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "ftpExplorer.deleteItem",
          "when": "view == ftp-explorer && (viewItem == folder || viewItem == file)",
          "group": "navigation"
        },
        {
          "command": "ftpExplorer.downloadToDirectory",
          "when": "view == ftp-explorer && (viewItem == folder || viewItem == file)",
          "group": "navigation"
        },
        {
          "command": "ftpExplorer.setRootDirectory",
          "when": "view == ftp-explorer && !folder",
          "group": "navigation"
        }
      ],
      "view/title": [
        {
          "command": "ftpExplorer.refresh",
          "when": "view == ftp-explorer && ftpExplorer.refreshEnabled",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.8",
    "@types/node": "20.x",
    "@types/vscode": "^1.94.0",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.11.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.6.2",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "basic-ftp": "^5.0.5",
    "clipboardy": "^4.0.0",
    "puppeteer": "^23.5.3"
  }
}